<div class="text-center">
  <h1>Shoes</h1>
    <% if @shoes.length > 0 %>
      <div class="col-md-2 col-md-offset-5">
        <ul>
          <% @shoes.each do |shoe| %>
            <a href="/shoes/<%= shoe.id %>"><li><%= shoe.name %></li></a>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="col-md-4 col-md-offset-4">
        <h2>No shoes, bummer</h2>
      </div>
    <% end %>
    <div class="col-md-12 text-center">
      <a href="/shoes/new" class="btn-default btn btn-lg"><i class="fa fa-plus fa-lg"></i> Add shoe</a>
    </div>
</div>
