<div class="text-center">
  <h1>Stores</h1>
    <% if @stores.length > 0 %>
      <div class="col-md-2 col-md-offset-5">
        <ul>
          <% @stores.each do |store| %>
            <a href="/stores/<%= store.id %>"><li><%= store.name %></li></a>
          <% end %>
        </ul>
      </div>
    <% else %>
    <div class="col-md-4 col-md-offset-4">
      <h2>No stores, bummer</h2>
    </div>
    <% end %>
    <div class="col-md-12 text-center">
      <a href="/stores/new" class="btn-default btn btn-lg"><i class="fa fa-plus fa-lg"></i> Add store</a>
    </div>
  </div>
</div>
