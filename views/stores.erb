<div class="text-center">
  <h1>Stores</h1>
  <div class="col-md-4 col-md-offset-4">
    <% if @stores.length > 0 %>
    <ul>
      <% @stores.each do |store| %>
        <a href="/stores/<%= store.id %>"><li><%= store.name %></li></a>
      <% end %>
    </ul>
    <% else %>
    <h2>No stores yet, bummer</h2>
    <% end %>
    <a href="/stores/new" class="btn-default btn btn-lg"><i class="fa fa-plus fa-lg"></i> Add store</a>
  </div>
</div>
