<h1>Add a shoe to <%= @store.name %></h1>
<form action="/stores/<%= @store.id %>/new_shoe" method="post">
  <!-- Forms -->
  <div class="form-group">
    <label for="name">Brand name</label>
    <input id="name" name="name" class="form-control" type="text" <% if @update %> value="<%= @shoe.name %>"><% end %>
  </div>
  <% if @errors %>
    <p class="error"><%= @errors %></p>
  <% end %>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
